rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public read access for all synagogue data (anyone can view)
    // Only authenticated users can write

    match /synagogues/{synagogueId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    match /synagogues/{synagogueId}/events/{eventId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /synagogues/{synagogueId}/columns/{columnId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /synagogues/{synagogueId}/settings/{settingId} {
      allow read: if true;
      allow write: if true; // Anyone can update board settings
    }
  }
}
